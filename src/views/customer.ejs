            <div class="form-control">
                <input name="data[last_name]" type="text" id="last_name" placeholder="Sobrenome do cliente" />
            </div>
            <div class="form-control">
                <input name="data[email]" type="email" id="email" placeholder="Email do cliente" />
            </div>
            <div class="form-control">
                <input name="data[telephone]" type="number" id="telephone" placeholder="Telefone do cliente" />
            </div>
            <div class="form-control">
                <input name="data[car]" type="text" id="car" placeholder="Modelo do carro" />
            </div>
            <div class="form-control">
                <input name="data[plate]" type="text" id="plate" placeholder="Placa do veículo" />
            </div>
            <div class="form-control">
                <input name="data[km]" type="number" id="km" placeholder="Quilometragem" />
            </div>
            <div class="form-control">
                <input name="data[oil]" type="text" id="oil" placeholder="Tipo de óleo" />
            </div>
            <div class="control-group">
                <label class="control control-checkbox" for="oil_filter">
                    Filtro de Oĺeo
                    <input name="data[oil_filter]" type="checkbox" id="oil_filter" />
                    <div class="control_indicator"></div>
                </label>
                <label class="control control-checkbox" for="air_filter">
                    Filtro de Ar
                    <input name="data[air_filter]" type="checkbox" id="air_filter" />
                    <div class="control_indicator"></div>
                </label>
                <label class="control control-checkbox" for="fuel_filter">
                    Filtro de Combustível
                    <input name="data[fuel_filter]" type="checkbox" id="fuel_filter" />
                    <div class="control_indicator"></div>
                </label>
            </div>
            <div class="form-control">
                <br>
                <label for="date">Data da proxima troca</label>
                <input name="data[next_exchange]" type="number" id="next_exchange"
                    placeholder="Quilometragem da proxima troca" />
            </div>
            <div class="form-control">
                <input name="data[notification_change]" type="date" id="notification_change"
                    placeholder="Notificar em" />
            </div>
            <button type="submit" id="sendEmail">Enviar</button>
        </form>
